{
  "suggest.noselect": false,
  "coc.preferences.formatOnSaveFiletypes": ["json", "python"],
  "python.jediEnabled": false,
  "python.formatting.provider": "yapf",
  "python.formatting.yapfPath": "/usr/lib/python3.8/site-packages/yapf",
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    }
  }
}
